{
  "extends": [
    "@socialgouv/eslint-config-recommended",
    "@socialgouv/eslint-config-react"
  ],
  "rules": {
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": ["Link"],
        "specialLink": ["hrefLeft", "hrefRight"],
        "aspects": ["invalidHref", "preferButton"]
      }
    ],
    "react/prop-types": "warn"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["components", "./src/components"],
          ["hooks", "./src/hooks"],
          ["lib", "./src/lib"],
          ["utils", "./src/utils"],
          ["styles", "./src/styles"]
        ]
      }
    }
  }
}
